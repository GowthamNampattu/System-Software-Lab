#include <stdio.h>

int main() {
int n;
 printf("Enter the number of processes: ");
 scanf("%d", &n);
 int at[n], bt[n], ct[n], wt[n], tat[n];
 float avg_wt = 0, avg_tat = 0;
 printf("Enter Arrival Time for each process:\n");
  for (int i = 0; i < n; i++) {
 printf("Process %d: ", i + 1);
 scanf("%d", &at[i]);
    }
printf("Enter Burst Time for each process:\n");
for (int i = 0; i < n; i++) {
 printf("Process %d: ", i + 1);
scanf("%d", &bt[i]);
    }
for (int i = 0; i < n; i++) {
 if (i == 0) {
 ct[i] = at[i] + bt[i];
} 
else 
  {
 if (ct[i - 1] < at[i]) {
 ct[i] = at[i] + bt[i];
 } 
else 
{
 ct[i] = ct[i - 1] + bt[i];
    }
      }

 tat[i] = ct[i] - at[i];
 wt[i] = tat[i] - bt[i];
 avg_wt += wt[i];
 avg_tat += tat[i];
    }
 printf("\nProcess\t Arrival Time\tBurst Time\tCompletion Time\t  Turn Around Time\t Waiting timeT\n");
  for (int i = 0; i < n; i++) {
  printf("P%d\t     %d\t           %d\t          %d\t              %d\t                  %d\n", i + 1, at[i], bt[i], ct[i], tat[i], wt[i]);
    }
  printf("\nAverage Waiting Time = %.2f", avg_wt / n);
    printf("\nAverage Turnaround Time = %.2f\n", avg_tat / n);

    return 0;
}
       
